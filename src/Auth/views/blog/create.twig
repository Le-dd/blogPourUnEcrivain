{% extends '/Blog/layout.twig' %}
{% block title "Création du compte utilisateur" %}
{% block classBody "pageCreatePass pageBase " %}


{% block body %}
<section class="container-fluid SectionEntete  ">
    <h1> Créer son compte utilisateur</h1>

</section>
<section class="container SectionMain">
  <form class="" action="{{path( routePrefix ~ '.create') }}" method="post" enctype="multipart/form-data">
    {{ csrf_input() }}
    {{ field('login', null, 'Nom d\'utilisateur') }}
    {{ field('password', null, 'Mot de passe', {type:'password'}) }}
    {{ field('verifpassword', null, 'Retaper le Mot de passe', {type:'password'}) }}
    {{ field('email', null, 'Adresse email') }}
  <button class="btn btn-primary" type="submit"> S'inscrire au blog </button>
  </form>
</section>



{% endblock %}
