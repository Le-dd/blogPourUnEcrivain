{% extends '/Blog/layout.twig' %}
{% block title "Contactez-moi!" %}
{% block classBody "pageContact pageBase " %}


{% block body %}
<section class="container-fluid SectionEntete SectionContact1">
  <h1> Contactez-moi! </h1>
</section>
<section class="container SectionContact2 SectionMain">

  <form class="" action="{{path('blog.contact') }}" method="post" enctype="multipart/form-data">
    {{ csrf_input() }}
    {{ field('name', null, "Votre nom") }}
    {{ field('email', null, "Votre email") }}
    {{ field('subjet', null, "L'objet du message") }}
    {{ field('message', null, "Contenu du message", {type:'textarea'})}}

    <button class="btn btn-primary" type="submit"> Envoyer</button>
  </form>
</section>


{% endblock %}
