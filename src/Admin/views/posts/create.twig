{% extends '/Admin/layout.twig' %}
{% block title "Ajouter un article" %}
{% block classBody "pageBase pageAdminArticle " %}

{% block body %}
<section class="container-fluid SectionEntete ">
  <h1> Ajouter un article</h1>
</section>

<section class="container SectionMain ">
  <div class="AdminImgeSelect">
    <h2> choisir l'image {{ image.title }}</h2>
    <img src="{{ imageType(image.url,'Miniature') }}" alt="{{ image.alt }}" >
    <form class="" action="{{path( 'blog.img.admin.image') }}" method="post" enctype="multipart/form-data">
      {{ csrf_input() }}
      <input class="d-none itemSave" type="hidden " name="itemSave" value="gggg">
      <button class="recupValue btn btn-dark" type="submit"> Ajouter</button>
    </form>
  </div>

  <form class="" action="{{path( routePrefix ~ '.create') }}" method="post" enctype="multipart/form-data">
    {{ csrf_input() }}
    {{ field('title', item.title, "Titre de l'article",{class:'champValue'}) }}
    {{ field('slug', item.slug, "Lien de l'article",{class:'champValue'}) }}
    {{ field('main', item.main, "Contenu de l'article", {type:'textarea', class:'champValue'})}}
    {{ field('date', item.date, "Date de l'article", {class:'datepicker champValue'}) }}
    {{ field('time', item.time, "Heure de l'article", {class:'timepicker champValue'}) }}
    {{ field('location_id', item.locationId, "Cat√©gorie de localisation", {options: locations, class:'champValue'}) }}
    <div id="mapAdmin" data-lat="{{ item.latitude}}" data-lng="{{ item.longitude}}" data-title="{{ item.namePlace}}"></div>
    {{ field('name_place', item.namePlace, "Nom du lieu",{class:'title'}) }}
    {{ field('latitude', item.latitude, "Latitude",{class:'Latitude'}) }}
    {{ field('longitude', item.longitude, "longitude",{class:'longitude'}) }}
    {{ field('visible', item.visible, "En ligne ?", {type:'checkbox', class:'champValue'})}}
    <input class="d-none" type="hidden " name="image_id" value="{{ image.id }}">
    <button class="btn btn-primary" type="submit"> Ajouter</button>
  </form>
</section>
{% endblock %}
